# A sample Gemfile
source "https://rubygems.org"

gem 'rake', '~> 10.4.2'
gem 'dotenv', '~> 2.0.1'
gem 'foreman', '~> 0.78.0'

gem 'erubis', '~> 2.7.0' # for auto escaping HTML - http://www.sinatrarb.com/faq.html#escape_html

# Redis-Rb Dependencies:
gem "redis", "~> 3.2.1" # starting with version 2.2.0, redis-rb is thread-safe by default.
# State Machine support for Transactions
gem 'aasm', "~> 3.2.1"

# Workers: 
gem 'resque', "~> 1.25.2"
gem 'resque-scheduler', "~> 4.0.0" 
gem 'resque-retry', "~> 1.4.0"

gem 'rest_client', "~> 1.8.3"

# Email:
gem 'mail', '~> 2.6.3'

# for safely decoding and encoding strings to HTML
gem 'htmlentities', '~> 4.3.3'

gem 'shotgun'
